<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape>
            <corners android:radius="@dimen/buttonCorners" />
            <solid android:color="@color/colorFavoriteButtonSelected" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="@dimen/buttonCorners" />
            <solid android:color="@color/colorFavoriteButtonPressed" />
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="@dimen/buttonCorners" />
            <solid android:color="@color/colorFavoriteButton" />
        </shape>
    </item>
</selector>
